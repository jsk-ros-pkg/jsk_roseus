<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar name="InitSequence">
            <Action ID="Init" name="Initialize Task" server_name="/t03_ports/init"/>
            <Action ID="setCoords" name="setBottleCoords" coords="${bottle_coords}"
                    server_name="/t03_ports/setcoords"/>
            <Sequence name="MainSequence">
                <Fallback name="MoveToTable">
                    <Condition ID="atSpot" spot="table-front" service_name="/t03_ports/atspot"/>
                    <Action ID="MoveTo" name="MoveToSpot" spot="table-front"
                            server_name="/t03_ports/moveto"/>
                </Fallback>
                <Action ID="PickBottleAt" coords="${bottle_coords}" name="PickBottleAtCoords"
                        server_name="/t03_ports/pickbottleat"/>
                <Action ID="PourBottle" server_name="/t03_ports/pourbottle"/>
                <Action ID="PlaceBottle" server_name="/t03_ports/placebottle"/>
            </Sequence>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Init"/>
        <Action ID="MoveTo">
            <input_port name="spot" type="string"/>
        </Action>
        <Action ID="PickBottleAt">
            <input_port name="coords" type="geometry_msgs/Pose"/>
        </Action>
        <Action ID="PlaceBottle"/>
        <Action ID="PourBottle"/>
        <Condition ID="atSpot">
            <input_port name="spot" type="string"/>
        </Condition>
        <Action ID="setCoords">
            <output_port name="coords" type="geometry_msgs/Pose"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

